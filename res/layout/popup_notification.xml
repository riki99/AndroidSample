<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:layout_width="250dip"   
  android:layout_height="280dip"   
  android:orientation="vertical"  
  android:background="@drawable/ballone_dialog_background"
  android:layout_gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ballone_dialog_background"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_balloon" />

        <TextView
            android:id="@+id/popup_notification_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="DeNaさん" />
        
    </LinearLayout>

  <TextView
      android:id="@+id/popup_notification_text"
      android:layout_width="fill_parent"
      android:layout_height="180dp"
      android:background="@color/popup_notification_text_background"
      android:padding="5dip"
      android:gravity="center"  
      android:text="画像を送信しました。確認してください" 
      android:textColor="@color/popup_notification_text_foreground" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center" >
      <Button
          android:id="@+id/popup_notification_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dip"
          android:background="@drawable/ballone_dialog_button_background"
          android:minWidth="80dip"
          android:paddingBottom="10dip"
          android:paddingTop="10dip"
          android:onClick="close"
          android:text="閉じる"
          android:textColor="@color/popup_notification_button_foreground" />
      <Button
          android:id="@+id/popup_notification_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dip"
          android:background="@drawable/ballone_dialog_button_background"
          android:minWidth="80dip"
          android:paddingBottom="10dip"
          android:paddingTop="10dip"
          android:text="表示"
          android:textColor="@color/popup_notification_button_foreground" />
      </LinearLayout>
  
</LinearLayout> 